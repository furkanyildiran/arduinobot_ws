<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="arduinobot">


<!-- <xacro:include filename="robot_core.xacro" /> -->
   

<xacro:include filename="inertial_macros.xacro" />
    
    
  
<material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>



  
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    
    <xacro:inertial_cylinder mass="5" length="0.6" radius="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>




  <link name="head">
    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="white"/>
    </visual>
    
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>
    
    <xacro:inertial_sphere mass="5" radius="0.2">
            <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
  </link>
  <joint name="head_swivel" type="continuous">
    <parent link="base_link"/>
    <child link="head"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.3"/>
  </joint>

  
    
    
</robot>
